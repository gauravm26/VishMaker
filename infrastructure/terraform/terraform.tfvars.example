# ============================================================================
# REQUIRED: Update these values in global/config.json
# ============================================================================
project_name                 = "vishmaker"
environment                  = "dev"
aws_region                   = "us-east-1"
domain_name                  = "yourdomain.com"        # ← Replace with your actual domain
cloudfront_distribution_id   = "E1234567890123"       # ← Replace with your actual CloudFront ID

# ============================================================================
# AUTOMATIC: The following values are set to sensible defaults
# You don't need to change these unless you have specific requirements
# ============================================================================

# Infrastructure Defaults
create_domain = false

# VPC Configuration (3-tier architecture)
vpc_cidr                = "10.0.0.0/16"
public_subnet_cidrs     = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs    = ["10.0.10.0/24", "10.0.20.0/24"]
database_subnet_cidrs   = ["10.0.30.0/24", "10.0.40.0/24"]

# Database Configuration (cost-effective for development)
db_instance_class       = "db.t3.micro"
db_allocated_storage    = 20
db_max_allocated_storage = 100
db_username             = "vishmaker"
db_name                 = "vishmaker_db"

# ECS Configuration (minimal for development)
backend_cpu            = 256
backend_memory         = 512
backend_desired_count  = 1
backend_port           = 8000
backend_image_tag      = "latest"

# S3 Configuration
enable_s3_versioning   = true

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100" 